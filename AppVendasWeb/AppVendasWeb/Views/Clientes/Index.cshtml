@model IEnumerable<AppVendasWeb.Models.Cliente>

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<h1 class="display-5 text-light my-5">Cadastro de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-light d-inline-flex align-items-center">
        <svg class="me-2" bootstrap-icon="PlusCircle" width="16" height="16" aria-label="Adicionar"></svg>Adicionar
    </a>
</p>

<div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>

                    <td class="text-end">
                        <a class="text-decoration-none text-light link-light btn btn-outline-light" asp-controller="Cliente" asp-action="Create" asp-route-id="@item.ClienteId">
                            <svg class="mx-1" bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar"></svg>
                            Novo Item
                        </a>
                        <a class="text-decoration-none text-light" asp-action="Edit" asp-route-id="@item.ClienteId">
                            <svg class="mx-2" bootstrap-icon="Pencil" width="16" height="16" aria-label="Editar"></svg>
                        </a>
                        <a class="text-decoration-none text-light" asp-action="Details" asp-route-id="@item.ClienteId">
                            <svg class="mx-2" bootstrap-icon="CardList" width="16" height="16" aria-label="Detalhes"></svg>
                        </a>
                        <a class="text-decoration-none text-light" asp-action="Delete" asp-route-id="@item.ClienteId">
                            <svg class="mx-2" bootstrap-icon="Trash" width="16" height="16" aria-label="Excluir"></svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
